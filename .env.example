# Environment Configuration
# Copy this file to .env and fill in the values

# Database
DATABASE_URL=sqlite+aiosqlite:///./crypto_data.db

# CoinGecko API (Free tier, no key required)
# Optional: Add Pro API key for higher rate limits
COINGECKO_API_KEY=

# Scheduler Settings
INGESTION_INTERVAL_MINUTES=5

# Supported Assets (comma-separated)
SUPPORTED_ASSETS=bitcoin,ethereum,solana,ripple,dogecoin

# Server Settings
API_HOST=0.0.0.0
API_PORT=8000
